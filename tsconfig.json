{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "paths": { "*": ["types/*"] },
    "lib": ["dom", "esnext", "es6", "es2017"],
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["react", "react-native", "jest"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "lib", "es", "./src/__tests__"],
  "compileOnSave": false
}
